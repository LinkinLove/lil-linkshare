<!DOCTYPE html>
<html>
<head>
    <title>Proxy Home</title>
    <style>
        #content-frame {
            width: 100%;
            height: 100vh;
            border: none;
        }
    </style>
</head>
<body>
    <h1>Welcome, <%= username %></h1>
    <select id="suffix-select">
        <option value="">Select a suffix</option>
        <% suffixes.forEach(function(suffix) { %>
            <option value="<%= suffix %>"><%= suffix %></option>
        <% }); %>
    </select>
    <iframe id="content-frame" sandbox="allow-scripts allow-same-origin allow-forms"></iframe>

    <script>
        document.getElementById('suffix-select').addEventListener('change', function() {
            var suffix = this.value;
            if (suffix) {
                document.getElementById('content-frame').src = '/proxy/' + suffix;
                history.pushState(null, '', '/' + suffix);
            }
        });

        // Cookie sync function
        function syncCookies() {
            fetch('/sync-cookies', { credentials: 'include' })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Cookie sync failed');
                    }
                    console.log('Cookies synced successfully');
                })
                .catch(error => console.error('Error syncing cookies:', error));
        }

        // Sync cookies every minute
        setInterval(syncCookies, 60000);

        // Initial cookie sync
        syncCookies();
    </script>
</body>
</html>
