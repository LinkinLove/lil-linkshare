<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LiL Links</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body, html {
            height: 100%;
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }

        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
            padding: 2rem;
        }

        h1 {
            color: #333;
            margin-bottom: 2rem;
            font-weight: 600;
            font-size: 2.5rem;
            text-align: center;
        }

        .suffix-buttons {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 1rem;
            max-width: 800px;
            margin-bottom: 2rem;
        }

        .suffix-button {
            padding: 0.8rem 1.5rem;
            font-size: 1rem;
            color: #fff;
            background-color: #4a90e2;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            min-width: 150px; 
            width: auto; 
        }

        .suffix-button:hover {
            background-color: #357ae8;
            transform: translateY(-2px);
            box-shadow: 0 6px 8px rgba(0,0,0,0.15);
        }

        #content-frame {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: none;
            display: none;
            z-index: 10;
        }

        .floating-buttons {
            position: fixed;
            bottom: 2rem;
            right: 2rem;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            z-index: 1000;
        }

        .floating-button {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 24px;
            cursor: pointer;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
            transition: all 0.3s ease;
        }

        #home-button {
            background-color: #4a90e2;
        }

        #logout-button {
            background-color: #e74c3c;
        }

        .floating-button:hover {
            transform: scale(1.1);
        }

        #home-button:hover {
            background-color: #357ae8;
        }

        #logout-button:hover {
            background-color: #c0392b;
        }

        .add-link-form {
            margin-top: 2rem;
            background: white;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 400px;
        }

        .add-link-form h2 {
            margin-bottom: 1rem;
            color: #333;
        }

        .add-link-form input {
            width: 100%;
            padding: 0.5rem;
            margin-bottom: 1rem;
            border: 1px solid #e0e0e0;
            border-radius: 5px;
        }

        .add-link-form button {
            background-color: #4a90e2;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .add-link-form button:hover {
            background-color: #357ae8;
        }

        @media (max-width: 768px) {
            h1 {
                font-size: 2rem;
            }

            .suffix-button {
                padding: 0.6rem 1.2rem;
                font-size: 0.9rem;
            }

            .floating-button {
                width: 50px;
                height: 50px;
                font-size: 20px;
            }
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .container, #content-frame, .floating-buttons {
            animation: fadeIn 0.6s ease-out;
        }

        .iframe-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.7);
            pointer-events: none;
            z-index: 999;
        }
    </style>
</head>
<body>
    <div class="container" id="main-container">
        <h1>Welcome, <%= username %></h1>
        <div class="suffix-buttons">
            <% suffixes.forEach(function(suffix) { %>
                <button class="suffix-button" data-suffix="<%= suffix %>"><%= suffix %></button>
            <% }); %>
        </div>
        <div class="add-link-form">
            <h2>Add New Link</h2>
            <input type="text" id="new-suffix" placeholder="Enter suffix">
            <input type="url" id="new-target-url" placeholder="Enter target URL">
            <button id="add-link-button">Add Link</button>
        </div>
    </div>
    <iframe id="content-frame" sandbox="allow-same-origin"></iframe>
    <div id="iframe-overlay" class="iframe-overlay" style="display:none;"></div>
    <div class="floating-buttons">
        <div id="home-button" class="floating-button">üè†</div>
        <div id="logout-button" class="floating-button">üö™</div>
    </div>

    <script>
        const mainContainer = document.getElementById('main-container');
        const contentFrame = document.getElementById('content-frame');
        const iframeOverlay = document.getElementById('iframe-overlay');
        const homeButton = document.getElementById('home-button');
        const logoutButton = document.getElementById('logout-button');
        const suffixButtons = document.querySelectorAll('.suffix-button');
        const floatingButtons = document.querySelector('.floating-buttons');
        const addLinkButton = document.getElementById('add-link-button');
        const newSuffixInput = document.getElementById('new-suffix');
        const newTargetUrlInput = document.getElementById('new-target-url');

        function updateFrame(suffix) {
            console.log('Updating frame with suffix:', suffix);
            if (suffix) {
                // ÈÄöËøáÂêéÁ´ØÊèê‰æõÁöÑÊ∑∑Ê∑Ü URL Âä†ËΩΩ iframe
                const proxyUrl = '/proxy/' + suffix;
                console.log('Setting iframe src to:', proxyUrl);
                contentFrame.src = proxyUrl;
                iframeOverlay.style.display = 'block';
                history.pushState(null, '', '/' + suffix);
                mainContainer.style.display = 'none';
                contentFrame.style.display = 'block';
                floatingButtons.style.display = 'flex';
                contentFrame.onload = function() {
                    console.log('iframe loaded successfully');
                    iframeOverlay.style.display = 'none';
                };
                contentFrame.onerror = function() {
                    console.error('Error loading iframe');
                    iframeOverlay.style.display = 'none';
                };
            }
        }
        function returnHome() {
            mainContainer.style.display = 'flex';
            contentFrame.style.display = 'none';
            floatingButtons.style.display = 'flex';
            history.pushState(null, '', '/');
            contentFrame.src = '';
        }

        function logout() {
            fetch('/logout', { method: 'POST', headers: { 'Content-Type': 'application/json' } })
                .then(response => response.json())
                .then(data => {
                    console.log(data.message);
                    window.location.href = '/';
                })
                .catch(error => console.error('Error logging out:', error));
        }

        suffixButtons.forEach(button => {
            button.addEventListener('click', () => {
                const suffix = button.getAttribute('data-suffix');
                updateFrame(suffix);
            });
        });

        homeButton.addEventListener('click', returnHome);
        logoutButton.addEventListener('click', logout);

        addLinkButton.addEventListener('click', () => {
            const suffix = newSuffixInput.value.trim();
            const targetUrl = newTargetUrlInput.value.trim();
            if (suffix && targetUrl) {
                console.log('Adding new link:', suffix, targetUrl);
                fetch('/add-link', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ suffix, targetUrl })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        console.log('New link added successfully');
                        location.reload();
                    } else {
                        console.error('Failed to add new link:', data.error);
                    }
                })
                .catch(error => console.error('Error adding link:', error));
            } else {
                alert('Please enter both suffix and target URL.');
            }
        });

        // Add listener for initial load to update iframe if a suffix is in the URL
        window.addEventListener('load', () => {
            const pathSuffix = window.location.pathname.slice(1);
            if (pathSuffix) {
                updateFrame(atob(pathSuffix));
            }
        });
    </script>
</body>
</html>
