<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LiL Links</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body, html {
            height: 100%;
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }

        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
            padding: 2rem;
        }

        h1 {
            color: #333;
            margin-bottom: 2rem;
            font-weight: 600;
            font-size: 2.5rem;
            text-align: center;
        }

        .suffix-buttons {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 1rem;
            max-width: 800px;
        }

        .suffix-button {
            padding: 0.8rem 1.5rem;
            font-size: 1rem;
            color: #fff;
            background-color: #4a90e2;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            min-width: 150px; 
            width: auto; 
        }

        .suffix-button:hover {
            background-color: #357ae8;
            transform: translateY(-2px);
            box-shadow: 0 6px 8px rgba(0,0,0,0.15);
        }

        #content-frame {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: none;
            display: none;
            z-index: 10;
        }

        .floating-menu {
            position: fixed;
            top: 1rem;
            right: 1rem;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            padding: 0.5rem;
            z-index: 1000;
            display: none;
        }

        #suffix-select {
            padding: 0.5rem;
            border: 1px solid #e0e0e0;
            border-radius: 5px;
            font-size: 0.9rem;
            background-color: #fff;
        }

        @media (max-width: 768px) {
            h1 {
                font-size: 2rem;
            }

            .suffix-button {
                padding: 0.6rem 1.2rem;
                font-size: 0.9rem;
            }
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .container, #content-frame, .floating-menu {
            animation: fadeIn 0.6s ease-out;
        }
    </style>
</head>
<body>
    <div class="container" id="main-container">
        <h1>Welcome, <%= username %></h1>
        <div class="suffix-buttons">
            <% suffixes.forEach(function(suffix) { %>
                <button class="suffix-button" data-suffix="<%= suffix %>"><%= suffix %></button>
            <% }); %>
        </div>
    </div>
    <iframe id="content-frame" sandbox="allow-scripts allow-same-origin allow-forms"></iframe>
    <div class="floating-menu">
        <select id="suffix-select">
            <option value="">Select a suffix</option>
            <% suffixes.forEach(function(suffix) { %>
                <option value="<%= suffix %>"><%= suffix %></option>
            <% }); %>
        </select>
    </div>

    <script>
        const mainContainer = document.getElementById('main-container');
        const contentFrame = document.getElementById('content-frame');
        const floatingMenu = document.querySelector('.floating-menu');
        const suffixSelect = document.getElementById('suffix-select');
        const suffixButtons = document.querySelectorAll('.suffix-button');

        function updateFrame(suffix) {
            console.log('Updating frame with suffix:', suffix);
            if (suffix) {
                const proxyUrl = '/proxy/' + suffix;
                console.log('Setting iframe src to:', proxyUrl);
                contentFrame.src = proxyUrl;
                history.pushState(null, '', '/' + suffix);
                mainContainer.style.display = 'none';
                contentFrame.style.display = 'block';
                floatingMenu.style.display = 'block';
                suffixSelect.value = suffix;

                contentFrame.onload = function() {
                    console.log('iframe loaded successfully');
                };
                contentFrame.onerror = function() {
                    console.error('Error loading iframe');
                };
            }
        }

        suffixButtons.forEach(button => {
            button.addEventListener('click', function() {
                console.log('Button clicked:', this.dataset.suffix);
                updateFrame(this.dataset.suffix);
            });
        });

        suffixSelect.addEventListener('change', function() {
            console.log('Select changed:', this.value);
            updateFrame(this.value);
        });

        const initialSuffix = '<%= selectedSuffix || "" %>';
        if (initialSuffix) {
            console.log('Initializing with suffix:', initialSuffix);
            updateFrame(initialSuffix);
        }

        function syncCookies() {
            fetch('/sync-cookies', { credentials: 'include' })
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`Cookie sync failed: ${response.status}`);
                    }
                    console.log('Cookies synced successfully');
                })
                .catch(error => console.error('Error syncing cookies:', error));
        }

        setInterval(syncCookies, 60000);
        syncCookies();
    </script>
</body>
</html>





